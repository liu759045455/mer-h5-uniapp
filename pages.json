{
	"easycom": {
		"^u-(.*)": "@/src/plugins/uview-ui/components/u-$1/u-$1.vue",
		"autoscan": true,
		"custom": {
			"^u-(.*)": "@/src/plugins/uview-ui/components/u-$1/u-$1.vue",
			"^home-(.*)": "@/src/components/home-$1/home-$1.vue"
		}
	},
	"pages": [{
		"path": "src/pages/login/index",
		"name": "login",
		"meta": {
			"title": "登录"
		},
		"style": {
			"navigationBarTitleText": "登录",
			"navigationStyle": "custom",
			"enablePullDownRefresh": true
		}
	}, {
		"path": "src/pages/homepage/index",
		"name": "homepage",
		"meta": {
			"title": "个人中心"
		},
		"style": {
			"navigationBarTitleText": "个人中心",
			"navigationStyle": "custom",
			"enablePullDownRefresh": false
		}
	}],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarBackgroundColor": "#44617b",
		"backgroundColorTop": "#44617b",
		"backgroundColor": "#f8f8f8",
		"navigationStyle": "custom"
	},
	"tabBar": {
		"color": "#999999",
		"selectedColor": "#44617b",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "src/pages/home/index",
				"text": "首页"
			},
			{
				"pagePath": "src/pages/intransit_project/index",
				"text": "在途项目"
			},
			{
				"pagePath": "src/pages/my/index",
				"text": "我的"
			}
		]
	},
	"condition": {
		//模式配置，仅开发期间生效
		"current": 0,
		//当前激活的模式(list 的索引项)
		"list": [{
			"name": "",
			//模式名称
			"path": "",
			//启动页面，必选
			"query": ""
			//启动参数，在页面的onLoad函数里面得到
		}]
	}
}
